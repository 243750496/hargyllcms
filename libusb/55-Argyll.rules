# udev rule to recognize instruments and make them accessible to user applications.
# where there are already rules to create /dev/bus/usb/00X/00X devices.
# Copy to /etc/udev/rules.d/55-Argyll.rules

# DTP20
SYSFS{idVendor}=="0765", SYSFS{idProduct}=="d020", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# DTP92Q (not testedt)
SYSFS{idVendor}=="0765", SYSFS{idProduct}=="d092", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# DTP94
SYSFS{idVendor}=="0765", SYSFS{idProduct}=="d094", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# MonacoOPTIX (Same as i1 Display 1)
SYSFS{idVendor}=="0670", SYSFS{idProduct}=="0001", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# i1Display
SYSFS{idVendor}=="0971", SYSFS{idProduct}=="2003", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# i1Monitor
SYSFS{idVendor}=="0971", SYSFS{idProduct}=="2001", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# i1Pro
SYSFS{idVendor}=="0971", SYSFS{idProduct}=="2000", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# ColorMunki
SYSFS{idVendor}=="0971", SYSFS{idProduct}=="2007", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# Colorimtre HCFR
SYSFS{idVendor}=="04db", SYSFS{idProduct}=="005b", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# Spyder 2
SYSFS{idVendor}=="085c", SYSFS{idProduct}=="0200", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# Spyder 3
SYSFS{idVendor}=="085c", SYSFS{idProduct}=="0300", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# Huey
SYSFS{idVendor}=="0971", SYSFS{idProduct}=="2005", ENV{COLOR_MEASUREMENT_DEVICE}="1"

# color calibration device
ENV{COLOR_MEASUREMENT_DEVICE}=="*?", ENV{ACL_MANAGE}="1", IMPORT{program}="usb-db %p"

